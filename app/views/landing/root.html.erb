<!-- This example requires Tailwind CSS v2.0+ -->
<div class="bg-amber-500">
  <div class="max-w-2xl mx-auto text-center py-16 px-4 sm:py-20 sm:px-6 lg:px-8">
    <h2 class="text-3xl font-extrabold text-white sm:text-4xl">
      <span class="block"><%= t('landing.title') %></span>
    </h2>
    <p class="mt-4 text-lg leading-6 text-amber-200"><%= t('landing.subtitle') %></p>
    <%= button_to(
            '/auth/google_oauth2',
            id: 'landing_login-button',
            data: { turbo: false },
            class: "mt-8 w-full inline-flex items-center justify-center px-5 py-3 border border-transparent text-base font-medium rounded-md text-amber-600 bg-white hover:bg-amber-50 sm:w-auto"
        ) do
    %>
      <%= icon(name: :login, colour: :amber) %> <%= t('landing.buttons.login') %>
    <% end %>
  </div>
</div>