<%= render BreadcrumbNavigation::Component.new(id: dom_id(resource)) do |component| %>
  <% component.with_breadcrumb(id: :products, label: resource.class.model_name.human(count: 2), url: product_duplicates_url) %>
  <% component.with_breadcrumb(id: dom_id(resource.product), label: resource.product.to_s, url: product_path(resource.product)) %>
  <% component.with_breadcrumb(id: dom_id(resource), label: resource.to_s, url: product_duplicate_path(resource), active: true) %>
<% end %>
<%= render TabNavigation::Component.new(id: dom_id(resource)) do |component| %>
  <% component.with_tab(
         id: :details,
         label: t('.tabs.details'),
         url: action_name == 'edit' ? edit_product_duplicate_path(resource) : product_duplicate_path(resource),
         active: controller.controller_name == 'product_duplicates',
         options: { parent: resource, icon_options: { name: :library, colour: :gray } }
     ) %>
  <% component.with_tab(
         id: :audit,
         label: Audited::Audit.model_name.human,
         url: product_duplicates_audits_path(product_duplicate_id: resource),
         active: controller.controller_name == 'audits',
         options: {
             parent: resource,
             icon_options: { name: :database, colour: :gray },
             badge_count: resource.own_and_associated_audits.size
         }
     ) %>
<% end %>