<div class="mt-4 shadow sm:rounded-md">
  <div class="px-4 py-5 bg-white space-y-6 sm:p-6" data-controller="resource-form--component resource">
    <form
      id="<%= form_id %>"
      action="<%= polymorphic_path(resource, format: :html) %>"
      method="post"
      accept-charset="UTF-8"
      class="space-y-8 divide-y divide-gray-200"
    >
      <div class="space-y-8 divide-y divide-gray-200 sm:space-y-5">
        <div>
          <div>
            <h3 id="resource_form--title" class="text-lg leading-6 font-medium text-gray-900"><%= title %></h3>
            <% unless action == :new %>
            <p id="resource_form--description" class="mt-1 max-w-2xl text-sm text-gray-500"><%= description %></p>
            <% end %>
          </div>
          <div class="pt-8 space-y-6 sm:pt-10 sm:space-y-5">
            <div id="resource_form--fields" class="space-y-6 sm:space-y-5">
              <% fields.each do |field| %>
                <%= field %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <div>
        <input id="resource_form--method" type="hidden" name="_method" value="<%= action == :new ? 'post' : 'patch' %>" autocomplete="off"/>
        <%= hidden_field_tag :authenticity_token, token %>
      </div>
    </form>
  </div>
</div>