<div id="<%= name %>--icon" class="mx-auto flex-shrink-0 flex items-center justify-center h-12 w-12 rounded-full bg-rose-100 sm:mx-0 sm:h-10 sm:w-10">
  <%= icon(**icon_options) if icon_options.present? %>
</div>
<div class="mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left">
  <h3 id="<%= name %>--title" class="text-lg leading-6 font-medium text-gray-900" id="modal-title"><%= title %></h3>
  <div class="mt-2">
    <p id="<%= name %>--message" class="text-sm text-gray-500"><%= message %></p>
  </div>
</div>